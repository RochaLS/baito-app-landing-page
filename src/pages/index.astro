---
import BannerLeft from '../components/BannerLeft.astro';
import BannerRight from '../components/BannerRight.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import '../styles/global.css';
// src/pages/index.astro
export const prerender = true; // Static generation for better SEO

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const currentYear = new Date().getFullYear();

// SEO Data
const seoData = {
  title: "Baito - Work Schedule & Pay Tracker App for Part-Time Workers",
  description: "Track shifts, calculate pay, and import work schedules with AI. Baito helps part-time workers manage multiple jobs, view earnings, and stay organized. Download free.",
  keywords: "work schedule app, shift tracker, pay calculator, part-time job tracker, work schedule planner, shift calendar, earnings tracker",
  ogImage: "/images/baito-og.png"
};

// Structured Data for App
const structuredData = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "Baito",
  "description": seoData.description,
  "applicationCategory": "ProductivityApplication",
  "operatingSystem": ["iOS"],
  "offers": [
    {
      "@type": "Offer",
      "name": "Baito Free",
      "price": "0",
      "priceCurrency": "Cad",
      "description": "Shift tracking and pay calculation"
    },
    {
      "@type": "Offer",
      "name": "Baito Pro Monthly",
      "price": "5.99",
      "priceCurrency": "CAD",
      "eligibleDuration": "P1M",
      "description": "AI-Powered schedule import"
    },
    {
      "@type": "Offer",
      "name": "Baito Pro Annual", 
      "price": "59.99",
      "priceCurrency": "CAD",
      "eligibleDuration": "P1Y",
      "description": "AI-Powered schedule import - Save 17%"
    }
  ],
  "featureList": [
    "Shift scheduling and tracking",
    "Pay calculation and earnings tracking",
    "AI-powered schedule import",
    "Multiple job management",
    "Calendar and list view",
    "Dark and light mode support"
  ]
};
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!-- Primary Meta Tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{seoData.title}</title>
    <meta name="description" content={seoData.description}>
    <meta name="keywords" content={seoData.keywords}>
    <meta name="author" content="Baito">
    <meta name="robots" content="index, follow">
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL}>
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content={canonicalURL}>
    <meta property="og:title" content={seoData.title}>
    <meta property="og:description" content={seoData.description}>
    <meta property="og:image" content={new URL(seoData.ogImage, Astro.site)}>
    <meta property="og:image:alt" content="Baito app interface showing shift calendar and earnings tracker">
    <meta property="og:site_name" content="Baito">
    <meta property="og:locale" content="en_US">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content={canonicalURL}>
    <meta property="twitter:title" content={seoData.title}>
    <meta property="twitter:description" content={seoData.description}>
    <meta property="twitter:image" content={new URL(seoData.ogImage, Astro.site)}>
    <meta property="twitter:image:alt" content="Baito app interface showing shift calendar and earnings tracker">

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="icon" type="image/png" href="/favicon.png">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">

    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
    <!-- Fonts -->
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet"></noscript>
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
    
    <!-- Additional structured data for Organization -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Baito",
      "url": "https://baito.app",
      "logo": "https://baito.app/images/logo.png",
      "contactPoint": {
        "@type": "ContactPoint",
        "contactType": "customer service",
        "email": "contact@baito.app"
      }
    }
    </script>
  </head>

  <body>
    <!-- Skip to main content for accessibility -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-blue-600 text-white px-4 py-2 rounded">
      Skip to main content
    </a>

    <header role="banner">
      <Hero imgAlt={"Baito app income view showing total earnings on iPhone"} />
    </header>

    <main id="main-content" role="main">
      <!-- How It Works Section -->
      <section class="py-20 lg:py-28 bg-gradient-to-br from-[#33bfbf] via-[#2ba8a8] to-[#239090]" aria-labelledby="how-it-works">
        <div class="container mx-auto px-6">
          
          <!-- Section Header -->
          <div class="text-center mb-16 lg:mb-20">
            <h2 id="how-it-works" class="text-3xl lg:text-5xl font-bold text-white mb-4">
              How Baito Works
            </h2>
            <p class="text-lg lg:text-xl text-white/80 max-w-2xl mx-auto">
              Manage your part-time work shifts and take control of your income in just three simple steps
            </p>
          </div>
          
          <!-- Features Grid -->
          <div class="grid md:grid-cols-3 gap-12 lg:gap-16" role="list">
            
            <!-- Feature 1 -->
            <article class="text-center group" role="listitem">
              <div class="icon mb-6 flex justify-center">
                <div class="w-20 h-20 lg:w-24 lg:h-24 bg-white rounded-2xl flex items-center justify-center p-5 shadow-2xl group-hover:shadow-3xl group-hover:scale-110 transition-all duration-300 hover:rotate-3">
                  <img loading="lazy" src="/images/icons/camera.svg" alt="Camera icon for adding shifts" class="w-full h-full opacity-80" width="96" height="96" />
                </div>
              </div>
              <div class="space-y-3">
                <span class="inline-block bg-white/20 text-white text-sm font-medium px-3 py-1 rounded-full">Step 1</span>
                <h3 class="font-bold text-xl lg:text-2xl mb-3 text-white">Add Jobs & Import Shifts</h3>
                <p class="text-white/90 text-base lg:text-lg  leading-relaxed">
                  Upload a schedule screenshot to import shifts or add them manually.
              </div>
            </article>
            
            <!-- Feature 2 -->
            <article class="text-center group" role="listitem">
              <div class="icon mb-6 flex justify-center">
                <div class="w-20 h-20 lg:w-24 lg:h-24 bg-white rounded-2xl flex items-center justify-center p-5 shadow-2xl group-hover:shadow-3xl group-hover:scale-110 transition-all duration-300 hover:rotate-3">
                  <img loading="lazy" src="/images/icons/magnifying.svg" alt="Magnifying glass icon for reviewing shifts" class="w-full h-full opacity-80" width="96" height="96" />
                </div>
              </div>
              <div class="space-y-3">
                <span class="inline-block bg-white/20 text-white text-sm font-medium px-3 py-1 rounded-full">Step 2</span>
                <h3 class="font-bold text-xl lg:text-2xl mb-3 text-white">Review & Organize Your Schedule</h3>
                <p class="text-white/90 text-base lg:text-lg  leading-relaxed">
                  Review your shifts and view them in a clean calendar or organized list.
                </p>
              </div>
            </article>
            
            <!-- Feature 3 -->
            <article class="text-center group" role="listitem">
              <div class="icon mb-6 flex justify-center">
                <div class="w-20 h-20 lg:w-24 lg:h-24 bg-white rounded-2xl flex items-center justify-center p-5 shadow-2xl group-hover:shadow-3xl group-hover:scale-110 transition-all duration-300 hover:rotate-3">
                  <img loading="lazy" src="/images/icons/money.svg" alt="Money icon for tracking earnings" class="w-full h-full opacity-80" width="96" height="96" />
                </div>
              </div>
              <div class="space-y-3">
                <span class="inline-block bg-white/20 text-white text-sm font-medium px-3 py-1 rounded-full">Step 3</span>
                <h3 class="font-bold text-xl lg:text-2xl mb-3 text-white">Track Your Part-Time Earnings</h3>
                <p class="text-white/90 text-base lg:text-lg leading-relaxed">
                  Track projected earnings instantly and see how much you&apos;ll make.
                </p>
              </div>
            </article>
            
          </div>
          
        </div>
      </section>

      <!-- Features Sections -->
      <section aria-label="App features">
        <BannerRight 
          title="Visualize Your Work Schedule" 
          subtitle="See all your part-time shifts in a clean calendar. Tap a day to check work time, job details, and projected earnings instantly."
          imgUrl="/images/mockups/calendar-iphone-16.webp"
          imgAlt="Baito app calendar view showing work shifts and earnings on iPhone"
          bgClass="bg-white"
          headlineClass="text-[#33bfbf]"
          subtitleClass="text-gray-600"
        />
      
        <BannerLeft 
          title="Light & Dark Mode, Always Organized" 
          subtitle="Scroll through past and upcoming shifts with pay and job type visible. Filter easily by shift type or date."
          imgUrl="/images/mockups/shift-list-dark-iphone-16.webp"
          imgAlt="Baito app shift list in dark mode showing organized work schedule"
          bgClass="bg-[#33bfbf]"
          headlineClass="text-white"
          subtitleClass="text-gray-100"
          displayClass="hidden"
        />
      
        <BannerRight 
          title="All Your Jobs, One Place"
          subtitle="Keep track of all your workplaces in one place, each with its own hourly rate and color code. Stay on top of your schedule and earnings, whether you have one or five jobs."
          imgUrl="/images/mockups/joblist-iphone-16.webp"
          imgAlt="Baito app job list showing multiple part-time work positions"
          bgClass="bg-gray-100"
          headlineClass="text-[#33bfbf]"
          subtitleClass="text-gray-600"
        />
      
        <BannerLeft 
          title="AI-Powered Shift Import" 
          subtitle="Upload a screenshot of your schedule and Baito Pro imports all your shifts automatically. Save time and skip manual entry. Premium feature."
          imgUrl="/images/mockups/import-iphone-16.webp"
          imgAlt="Baito Pro AI import feature processing work schedule screenshot"
          bgClass="bg-white"
          headlineClass="text-[#33bfbf]"
          subtitleClass="text-gray-600"
          displayClass="block"
        />
      </section>
    </main>

    <footer role="contentinfo">
      <Footer />
    </footer>

    <!-- Schema markup for FAQ if you have one -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "What is Baito?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Baito is a work schedule and pay tracking app designed for part-time workers. It helps you track shifts, calculate earnings, and manage multiple jobs in one organized place."
          }
        },
        {
          "@type": "Question", 
          "name": "Can I import my work schedule automatically?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes! Baito Pro uses AI to automatically import shifts from screenshots of your work schedule. Simply upload a photo and our AI will detect and add your shifts automatically."
          }
        },
        {
          "@type": "Question",
          "name": "Does Baito work for multiple jobs?", 
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Absolutely! Baito is designed to help you manage multiple part-time jobs. Each job can have its own hourly rate, color code, and shift tracking."
          }
        }
      ]
    }
    </script>
  </body>
</html>