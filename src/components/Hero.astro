---
import Button from "./Button.astro";
import Mockup from "./Mockup.astro";

const title = "No more guessing";
const title1 = "your paycheck.";
const subtitle = "Juggling multiple jobs? Track your shifts, predict income, and import schedules from a screenshot with AI. Fast, smart, and made for part-timers.";
const logo = "/images/logo.png";


export interface Props {
    imgAlt: string;
}

const { imgAlt } = Astro.props as Props;


---

<section class="py-12 bg-white">
    <div class="container mx-auto px-0 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-0 lg:gap-16 items-center min-h-[80vh]">
        
        <!-- Left Content -->
        <div class="lg:col-span-7 space-y-8 lg:space-y-12 px-4 sm:px-6 lg:px-0">
          
          <!-- Logo -->
          <div class="flex justify-start">
            <img src={logo} alt="Baito Logo" class="h-12 w-auto" />
          </div>
          
          <!-- Headline -->
          <div class="space-y-2 text-left">
            <h1 class="text-4xl sm:text-5xl lg:text-7xl font-bold leading-[0.9] tracking-tight text-gray-900">
              <span class="block">{title}</span>
              <span class="block mt-2 text-[#33BFBF]">{title1}</span>
            </h1>
          </div>
          
          <!-- Subtitle -->
          <div class="max-w-lg mx-auto lg:mx-0 text-left">
            <p class="text-lg lg:text-xl text-gray-600 leading-relaxed">
              {subtitle}
            </p>
          </div>
          
          <!-- CTA Button -->
          <div class="flex justify-center lg:justify-start" >
            <Button />
          </div>
        </div>
      
        <!-- Right Content - Phone mockup -->
        <div class="lg:col-span-5 flex justify-center lg:justify-end lg:order-1 mt-10 lg:mt-0">
          <Mockup imgUrl="/images/mockups/home-iphone-16.png" imgAlt={imgAlt} />
        </div>
        
      </div>
    </div>
  </section>